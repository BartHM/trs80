{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ]
}
